<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:background="@color/white"
    android:elevation="10px">

    <TextView
        android:id="@+id/socialPageFriendRequestItemAcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="@drawable/sent_messages"
        android:text="Accept"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/socialPageFriendRequestItemDenyButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/socialPageFriendRequestItemDenyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/received_messages"
        android:text="Deny"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/socialPageFriendRequestAvatarImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_avatar_icon_of_social_media_user_vector"/>

    <TextView
        android:id="@+id/socialPageFriendRequestUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/socialPageFriendRequestAvatarImage"
        app:layout_constraintStart_toEndOf="@+id/socialPageFriendRequestAvatarImage"
        app:layout_constraintTop_toTopOf="@+id/socialPageFriendRequestAvatarImage" />

</androidx.constraintlayout.widget.ConstraintLayout>